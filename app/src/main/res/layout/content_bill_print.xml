<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bitplaylabs.restaurent.views.activities.BillPrintActivity"
    tools:showIn="@layout/activity_bill_print">


    <TextView
        android:id="@+id/act_billprint_captain_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_below="@id/act_billprint_captain_tv"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/act_billprint_guest_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/act_billprint_captain_tv"
        android:textColor="@color/colorBlack"
        android:textSize="15sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_above="@id/act_billprint_tv"
        android:background="@color/colorBlack"/>

    <TextView
        android:id="@+id/act_billprint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="5dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/colorBlack"
        android:layout_below="@id/act_billprint_guest_tv"/>


  <!--  <com.github.barteksc.pdfviewer.PDFView
